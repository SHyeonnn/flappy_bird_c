while (1)
{	
	map -= 2; // 1번째 나무를 움직이는 변수

	if (mapx <= 3)
	{
		mapX = 0; // 1번째 나무의 x좌표가 3보다 작아진다면 나무의 위치 초기화
	}

	if (map1 == 40)
	{
		map += 1;; // 1번째 트리의 위치가 중간에 왔다면 2번째 트리 출력을 위한 변수 초기화
	}
}

int main() {
	gotoxy(0, 18);
	console();
	bird();
	map();
}
